<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shaker.test1" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="SHAKER"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashAT"
            android:theme="@style/Splash"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".MainActivity"  android:screenOrientation="portrait" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <activity android:name=".LoginAT" android:screenOrientation="portrait" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <activity android:name=".SignAT" android:screenOrientation="portrait" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <activity android:name=".MusicChoAT" android:screenOrientation="portrait" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <activity android:name=".MusicCho2AT" android:screenOrientation="portrait" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <activity android:name=".SetAT" android:screenOrientation="portrait" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <activity android:name=".GameAT" android:screenOrientation="landscape" android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        <activity android:name=".OverAT" android:screenOrientation="landscape" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <activity android:name=".ScoreAT" android:screenOrientation="landscape" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <activity android:name=".Game_PauseAT" android:screenOrientation="sensorLandscape" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <activity android:name=".MusicLodAT" android:screenOrientation="sensorLandscape" android:configChanges="orientation|screenSize|keyboard|keyboardHidden"/>
        <service android:name="MusicService"/>

    </application>

    <uses-feature android:name="android.hardware.camera2"/>

</manifest>